<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2d6b3"
    android:backgroundTintMode="src_in"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif-black"
        android:text="Convertor"
        android:textAlignment="center"
        android:textColor="#A63C3C"
        android:textSize="48sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnTemperatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLongitud"
        android:layout_width="293dp"
        android:layout_height="56dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#bf8450"
        android:text="Convertir a longitud"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTemperatura" />

    <Button
        android:id="@+id/btnTemperatura"
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#bf8450"
        android:backgroundTintMode="add"
        android:rotation="0"
        android:text="Convertir a temperatura"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLongitud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnDivisas"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#bf8450"
        android:text="Convertir divisas"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPeso" />

    <Button
        android:id="@+id/btnPeso"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#bf8450"
        android:text="Convertir a peso"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDivisas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLongitud" />

</androidx.constraintlayout.widget.ConstraintLayout>